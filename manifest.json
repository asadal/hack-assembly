{
  "manifest_version": 3,
  "name": "Hack Assembly",
  "version": "1.0.0",
  "description": "국회 의사중계시스템의 AI 자막을 추출하고 저장하는 확장 프로그램",
  "permissions": ["activeTab", "storage", "scripting", "tabs", "notifications"],
  "host_permissions": [
    "*://w3.assembly.go.kr/vod/*",
    "*://assembly.webcast.go.kr/main/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_badge": {
      "text": "",
      "color": "#3b82f6"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://w3.assembly.go.kr/vod/*",
        "*://assembly.webcast.go.kr/main/*",
        "*://assembly.webcast.go.kr/main/pressplayer.asp*"
      ],
      "js": [
        "common/utils.js",
        "content/timestamp.js",
        "content/capture.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-capture": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "시작/일시정지 토글"
    },
    "stop-capture": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "자막 추출 중지"
    },
    "save-subtitles": {
      "suggested_key": {
        "default": "Alt+D"
      },
      "description": "자막 저장"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://w3.assembly.go.kr/*", "*://assembly.webcast.go.kr/*"]
    }
  ]
}
